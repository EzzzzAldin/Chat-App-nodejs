<%- include('parts/header')%>
<%- include('parts/navbar')%>

<div class="container text-center">
    <h3>Create Account</h3>
    <form action="/signup" method="POST">
        <input type="text" class="form-control mt-3" name="username" placeholder="Username">
        <% let usernameError = validationErrors.find(err => err.param === 'username') %>
        <% if (usernameError) { %>
            <p class="alert alert-danger mt-2">
                <%= usernameError.msg %>
            </p>
        <% } %>
        <input type="email" class="form-control mt-3" name="email" placeholder="E-mail">
        <% let emailError = validationErrors.find(err => err.param === 'email') %>
        <% if (emailError) { %>
            <p class="alert alert-danger mt-2">
                <%= emailError.msg %>
            </p>
        <% } %>
        <input type="password" class="form-control mt-3" name="password" placeholder="Password">
        <% let passwordError = validationErrors.find(err => err.param === 'password') %>
        <% if (passwordError) { %>
            <p class="alert alert-danger mt-2">
                <%= passwordError.msg %>
            </p>
        <% } %>
        <input type="password" class="form-control mt-3" name="confiremPassword" placeholder="Confirm Password">
        <% let confiremPasswordError = validationErrors.find(err => err.param === 'confiremPassword') %>
        <% if (confiremPasswordError) { %>
            <p class="alert alert-danger mt-2">
                <%= confiremPasswordError.msg %>
            </p>
        <% } %>
        <input type="submit" value="Create Account" class="btn btn-primary mt-3">
    </form>
    <% if(authError) { %>
        <br>
        <p class="alert alert-danger mt-2">
            <%= authError%>
        </p>
    <% } %>

    <br>
    <div>
        Already have account ? <a href="/login">Login</a>
    </div>
</div>

<%- include('parts/scripts')%>

</body>
</html>