<%- include('parts/header')%>
<%- include('parts/navbar')%>

<div class='container'>
    <form action="/groups/create" method="post">
        <input class="form-control mt-2" type="text" name="name" placeholder="Group Name">
        <input type="hidden" name="users" value="<%= isUser %>">
        <div class="row">
                <% for (let friend of friends) { %>
                    <div class="col col-12 col-md-6 col-lg-4 col-xl-3 rounded mt-5">
                        <img class="mx-auto d-block rounded-circle border border-dark mt-5" src="/<%= friend.image %>" style="height: 200px; width: 200px;">
                        <div style="text-align: center;" class="mt-2">
                            <h3>
                                <a href="/profile/<%= friend.id %>" style="color: #000"> <%= friend.name %> </a>
                            </h3>
                            <input type="checkbox" value="<%= friend.id %>" name="users" class="btn btn-block br mt-2">
                        </div>
                    </div>
                <% } %>
        </div>
        <input type="submit" value="Create" class="btn btn-dark btn-lg float-right mt-2">
    </form>
</div>


<%- include('parts/scripts')%>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/sockets/init.js"></script>

</body>
</html>