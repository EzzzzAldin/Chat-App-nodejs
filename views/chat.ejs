<%- include('parts/header')%>
<%- include('parts/navbar')%>

<div class="row chat">
    <div class="col col-12 col-md-3">
        <input type="hidden" id="chatId" value="<%= chatId %>">
        <img class="mx-auto d-block rounded-circle border border-dark mt-5" src="/<%= friendData.image %>" style="height: 200px; width: 200px;">
        <br>
        <a href="/profile/<%= friendData.id%>">
            <h4>
                <%= friendData.username%>
            </h4>
        </a>
    </div>
    <div class="col -col-12 col-md-9 messages">
        <div id="messages-container">
            <% for (let message of messages) { %>
                <span class="msg"><%= message.content%>"</span>
            <% } %>
        </div>
        <div class="messages-form">
            <textarea class="form-control" id="message"></textarea>
            <button id="sendBtn" class="btn br">Send</button>
        </div>
    </div>
</div>


<%- include('parts/scripts')%>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/sockets/init.js"></script>
<script src="/js/sockets/chat.js"></script>

</body>
</html>